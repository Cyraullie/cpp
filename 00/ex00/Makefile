NAME = megaphone

SRCDIR = srcs/
OBJDIR = objs/

CC = c++
CFLAGS = -Wall -Wextra -Werror -g -std=c++98
RM = rm -rf

SRCS = $(shell find $(SRCDIR) -type f -name "*.cpp")
OBJS = $(SRCS:$(SRCDIR)%.cpp=$(OBJDIR)%.o)

GREEN = \033[1;32m
CYAN = \033[1;36m
YELLOW = \033[1;33m
RESET = \033[0m

# RÃ¨gles
all: header $(NAME)

header:
	@echo "$(GREEN)"
	@echo "   __________  ____  ____  ____        _______  ______  ____ "
	@echo "  / ____/ __ \/ __ \/ __ \/ __ \      / ____/ |/ / __ \/ __ \\"
	@echo " / /   / /_/ / /_/ / / / / / / /_____/ __/  |   / / / / / / /"
	@echo "/ /___/ ____/ ____/ /_/ / /_/ /_____/ /___ /   / /_/ / /_/ / "
	@echo "\____/_/   /_/    \____/\____/     /_____//_/|_\____/\____/  "
	@echo "                                                             "
	@echo "BY CGOLDENS"
	@echo "$(RESET)"

${OBJDIR}%.o: $(SRCDIR)%.cpp
	@mkdir -p $(dir $@)
	@$(CC) $(CFLAGS) -c -o $@ $<

$(NAME): $(OBJS) 
	$(CC) $(CFLAGS) $(OBJS) -o $(NAME)
	@echo "$(CYAN)Build completed!$(RESET)"

clean:
	@echo "$(YELLOW)Cleaning object files...$(RESET)"
	$(RM) $(OBJDIR)

fclean: clean
	@echo "$(YELLOW)Cleaning $(NAME) binary$(RESET)"
	$(RM) $(NAME)


re: fclean all

.PHONY: all clean fclean re
